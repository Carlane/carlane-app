<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.cherry.alok.myapplication.UserCarListFragment$PlaceholderFragment">
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:gravity="center_horizontal"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:weightSum="1">

    <android.support.v7.widget.CardView
        android:id="@+id/card_brand"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:layout_marginBottom="8dp"
        android:layout_marginLeft="8dp"
        android:layout_marginRight="8dp">
        <TextView
            android:id="@+id/carbrand_label"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:text="Brand"
            android:textAlignment="center"
            android:textSize="30sp"
            android:theme="@style/Base.CardView"/>

    </android.support.v7.widget.CardView>
    <android.support.v7.widget.CardView
        android:id="@+id/card_model"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:layout_marginBottom="8dp"
        android:layout_marginLeft="8dp"
        android:layout_marginRight="8dp">
        <TextView
            android:id="@+id/carmodel_label"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:text="Brand"
            android:textAlignment="center"
            android:textSize="30sp"
            android:theme="@style/Base.CardView"/>
    </android.support.v7.widget.CardView>
    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:layout_marginBottom="16dp"
        android:layout_marginLeft="16dp"
        android:layout_marginRight="16dp">
    <TextView
        android:id="@+id/carreg_label"
        android:layout_width="match_parent"
        android:layout_height="65dp"
        android:text="Select Car"
        android:textAlignment="center"
        android:textSize="20sp"
        android:theme="@style/Base.CardView"
        android:layout_weight="0.96" />

    <ImageView
        android:id="@+id/car_imageView"
        android:layout_width="match_parent"
        android:gravity="center_horizontal"
        android:layout_height="356dp"
        android:src="@android:drawable/sym_def_app_icon"
        android:layout_gravity="bottom"
        android:baselineAlignBottom="false"
        android:contentDescription="Image Of Car" />
    </android.support.v7.widget.CardView>



</LinearLayout>
</FrameLayout>
