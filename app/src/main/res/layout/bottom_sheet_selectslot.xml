<?xml version="1.0" encoding="utf-8"?>
<android.support.v4.widget.NestedScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    app:behavior_peekHeight="140dp"
    android:elevation="8dp"
    app:layout_behavior="android.support.design.widget.BottomSheetBehavior">


    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">








            <FrameLayout
                android:layout_width="match_parent"
                android:layout_height="280dp"
                android:background="@color/amber">
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="100dp"
                    android:background="@android:color/white"
                    android:elevation="4dp"
                    android:dividerPadding="1dp"
                    android:orientation="vertical"
                    android:id="@+id/toplayout"

                    >
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent" android:orientation="horizontal"


                        android:layout_weight="0.5"
                        >
                        <ImageView
                            android:id="@+id/carlogo"
                            android:layout_width="50dp"
                            android:layout_height="40dp"
                            android:layout_weight="0.2"
                            android:src="@drawable/hyundai_cars"/>
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center_horizontal|center_vertical"
                            android:text=""
                            android:textAlignment="center"
                            android:textAppearance="@style/Base.TextAppearance.AppCompat"
                            android:textSize="20sp"
                            android:shadowColor="#00ccff"
                            android:shadowRadius="1.5"
                            android:shadowDx="1"
                            android:shadowDy="1"
                            android:id="@+id/request_car_text"
                            android:layout_weight="0.56" />
                        <Button
                            android:id="@+id/carselect"
                            android:layout_width="20dp"
                            android:layout_height="match_parent"
                            android:layout_gravity="center_vertical"

                            android:layout_weight="0.2"
                            android:background="@drawable/car_option_garage"
                            />

                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_weight="0.5"
                        android:layout_marginBottom="5dp">
                        <Button
                            android:id="@+id/confirm_request"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_marginTop="4dp"
                            android:text="REQUEST YOUR SERVICE"
                            android:shadowColor="#00ccff"
                            android:shadowRadius="1.5"
                            android:shadowDx="1"
                            android:shadowDy="1"
                            style="@style/ButtonStylePositiveBlue"
                            />
                    </LinearLayout>



                </LinearLayout>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:text="Description of Services"
                    android:textColor="@android:color/white" />

            </FrameLayout>


    </FrameLayout>

</android.support.v4.widget.NestedScrollView>