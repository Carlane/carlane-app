    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center_vertical"
        android:orientation="vertical"
        android:weightSum="1">


        <android.support.v7.widget.CardView
            android:layout_width="match_parent"
            android:id="@+id/card_image"
            android:layout_height="match_parent"
            android:layout_marginTop="10dp"
            android:layout_marginBottom="10dp"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            >
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical">
            <TextView
                android:id="@+id/carbrand_label_clps"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:text="Brand"
                android:textAlignment="center"
                android:textSize="30sp"
                android:theme="@style/Base.CardView"/>
            <TextView
                android:id="@+id/carmodel_label_clps"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:text="Model"
                android:textAlignment="center"
                android:textSize="30sp"
                android:theme="@style/Base.CardView"/>
            <TextView
                android:id="@+id/carreg_label_clps"
                android:layout_width="match_parent"
                android:layout_height="65dp"
                android:text="Select Car"
                android:textAlignment="center"
                android:textSize="20sp"
                android:theme="@style/Base.CardView" />

            <ImageView
                android:id="@+id/car_imageView_clps"
                android:layout_width="match_parent"
                android:gravity="bottom"
                android:layout_height="match_parent"
                android:src="@drawable/hyundai_cars"
                android:layout_gravity="bottom"
                android:baselineAlignBottom="false"
                android:contentDescription="Image Of Car"
                android:layout_marginTop="6dp"
                android:layout_marginBottom="6dp"
                android:layout_marginLeft="16dp"
                android:layout_marginRight="16dp"/>
            </LinearLayout>
        </android.support.v7.widget.CardView>
    </LinearLayout>

</LinearLayout>